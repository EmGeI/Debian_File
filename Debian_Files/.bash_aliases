## APT Aliases ##
alias upd='sudo apt update'
alias upg='sudo apt upgrade'
alias maj='upd && upg'
alias ins='sudo apt install'
alias ase='sudo apt search'
alias newapt='sudo nano /etc/apt/source.list.d/'
alias liste='sudo apt list --upgradable'
## NANO Aliases ##
alias napt='sudo nano /etc/apt/sources.list'

